#include <zephyr/dt-bindings/gpio/gpio.h>

/ {
	aliases {
		display = &spi1;
	};
};

&leds {
	display_dc: display_dc {
		gpios = <&gpioa 4 GPIO_ACTIVE_HIGH>;
	};
	display_reset: display_reset {
		gpios = <&gpioa 0 GPIO_ACTIVE_HIGH>;
	};
	display_cs: display_cs {
		gpios = <&gpiob 0 GPIO_ACTIVE_HIGH>;
	};
	rfid_buzzer: buzzer {
		gpios = <&gpioa 8 GPIO_ACTIVE_HIGH>;
	};
};

&i2c1 {
	status = "okay";

	rfid_mux: mux@70 {
		reg = <0x70>;
		status = "okay";
		compatible = "ti,tca9548a";
		#address-cells = <1>;
		#size-cells = <0>;

		mux_i2c@0 {
			reg = <0>;
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "ti,tca9548a-channel";

			rfid@2c {
				compatible = "nxp,mfrc522";
				reg = <0x2c>;
				status = "okay";
				bearsink,room = "NHALL";
			};

			rfid@2d {
				compatible = "nxp,mfrc522";
				reg = <0x2d>;
				status = "okay";
				bearsink,room = "TOMB";
			};

			rfid@2e {
				compatible = "nxp,mfrc522";
				reg = <0x2e>;
				status = "okay";
				bearsink,room = "GUARDEDWAY";
			};

			rfid@2f {
				compatible = "nxp,mfrc522";
				reg = <0x2f>;
				status = "okay";
				bearsink,room = "GALLERY";
			};
		};

		mux_i2c@1 {
			reg = <1>;
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "ti,tca9548a-channel";

			rfid@2c {
				compatible = "nxp,mfrc522";
				reg = <0x2c>;
				status = "okay";
				bearsink,room = "ALLEY";
			};

			rfid@2d {
				compatible = "nxp,mfrc522";
				reg = <0x2d>;
				status = "okay";
				bearsink,room = "BONEPIT";
			};

			rfid@2e {
				compatible = "nxp,mfrc522";
				reg = <0x2e>;
				status = "okay";
				bearsink,room = "ENTRANCE";
			};

			rfid@2f {
				compatible = "nxp,mfrc522";
				reg = <0x2f>;
				status = "okay";
				bearsink,room = "VENT";
			};
		};
	};
};

&spi1 {
	status = "okay";
};
